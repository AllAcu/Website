<!DOCTYPE html>
@{
    Layout = null;
}

<html ng-app="allAcuApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-route.js")
    @Scripts.Render("~/Scripts/smart-table.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/app")
</head>
<header width="100%">
    <div style="display: inline-block;float: right" ng-controller="header">
        <select ng-model="currentProvider"
                ng-model-options="{ getterSetter: true }"
                ng-options="p.businessName for p in providers()"></select>
    </div>
</header>
<div class="container body-content">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" ng-include="'/Templates/Site/nav.html'">
        </div>
    </div>

    @RenderBody()

    <div ng-include="'/Templates/Site/footer.html'"></div>
</div>
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>
